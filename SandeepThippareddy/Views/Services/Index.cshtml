<style>
    .servicesContainer {
        background: #f8f9fa;
    }
    .openBlockServices{
        background: #f8f9fa;
    }

        .servicesContainer h3 {
            color: #fff;
        }

    .w3_head {
        text-align: center;
        color: var(--heading);
        margin: 0 0 1em;
        font-size: 2.5em;
        letter-spacing: 2px;
        text-transform: capitalize;
    }

    .agileits_servicesContainer_grids {
        margin: 0em 0 3em;
    }

    .agileits_servicesContainer_grid {
        padding: 2em;
        text-align: left;
        background: #fff;
        transition: .5s ease-in;
        -webkit-transition: .5s ease-in;
        -moz-transition: .5s ease-in;
        -o-transition: .5s ease-in;
        -ms-transition: .5s ease-in;
    }

        .agileits_servicesContainer_grid h5 {
            font-size: 1.5em;
            margin: 0em 0 .5em;
        }

        .agileits_servicesContainer_grid p {
            color: black;
            line-height: 2em;
            font-size: 16px;
        }

    .customTop {
        transition: all 300ms ease-in-out;
        z-index: 1;
        width: 100%;
        overflow: hidden;
        position: relative;
        height:400px;

    }

        .customTop:before {
            bottom: 0;
            right: 0;
        }

        .customTop:after, .customTop:before {
            content: '';
            width: 0;
            height: 0;
            visibility: hidden;
            position: absolute;
            transition: all 800ms ease-in-out;
            border-radius: 8px;
        }

        .customTop:after {
            top: 0;
            left: 0;
        }

        .customTop:hover:after, .customTop:hover:before {
            width: 100%;
            height: 100%;
            visibility: visible;
        }

    .customBottom h5 {
        margin: 0em 0 .5em;
        color: var(--heading);
        font-size: 25px;
        line-height: 30px;
        font-weight: 700;
        text-transform: capitalize;
        transition: .5s all;
        -webkit-transition: .5s all;
        -o-transition: .5s all;
        -moz-transition: .5s all;
        -ms-transition: .5s all;
    }

    .customBottom p {
        color: black;
        font-size: 17px;
        line-height: 26px;
        margin: 0;
    }

    .customBottom {
        padding: 2em 1em;
        border: none;
        background: #fff;
        text-align: center;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .customBottom:hover{
        background:white;

    }
    .customTop:hover {
        cursor: default;   
    }

    .service_grid_btm_left img {
        border-top-left-radius: 0px;
        border-top-right-radius: 0px;
        width:100%;
        height:200px;
    }

    .customTop:hover .customBottom i {
        color: black;
        box-shadow:unset;
        transition: .5s all;
        -webkit-transition: .5s all;
        -o-transition: .5s all;
        -moz-transition: .5s all;
        -ms-transition: .5s all;
    }

    .customBottom span.fa {
        display: inline-block;
        font-size: 30px;
        margin-bottom: 30px;
        color: forestgreen;
    }

    .openBlockServices h4.mission {
  color: var(--heading);
  font-size: 22px;
  line-height: 28px;
  font-weight: 700;
  margin-top: 25px; }

.openBlockServices h3.head-title {
